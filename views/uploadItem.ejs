<% include partials/header %>

<div class="container shadowEffect mt-3" id="uploadForm">
	<form class="form" action="/uploadItem" method="POST" enctype="multipart/form-data">
		
		<% if (message != null) { %>
		<div class="form-group">
			<div class="alert alert-success"><%= message %></div>
		</div>
		<% } %>

		<div class="form-group">
			<h2 class="text-sm-center">Add Items</h2>
			<div class="row">
				<input type="file" class="mx-4 form-control	" name="file" multiple>
			</div>
		</div>

		<div class="form-group">
			<input class="btn btn-success d-block mx-auto" type="submit" name="submit">
		</div>
	</form>
	
</div>


